package Fisica::Functions;

use IO::Socket::INET;

use strict;
use warnings;

use Exporter qw(import);

our @EXPORT_OK = qw(functions);

sub Dec2Bin {
	#Converter decimal para binario: 
	my $bin = sprintf("%b", shift);

	return $bin;
}

sub Bin2Asc {
	#Convert binary to asc
	$binarySample = shift; #"01010100011001010111001101110100"; # "Test" in binary
	$chars = length($binarySample);
	@packArray = pack("B$chars",$binarySample);
	#print "@packArray\n";

	return @packArray;
}
